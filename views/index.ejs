<% include ./partials/header %>

<div class="ui main very padded container segment">   
    <div class="ui huge centered header">Parhaat ajanviettopaikat lapsiperheille</div> 
    <div class="ui centered cards">
        <% places.forEach(function(place){ %>
            <div class="teal card">
                <div class="image">
                    <img src="<%= place.image %>">
                </div>
                <div class="content">
                    <div class="header"><%=place.title%></div>
                    <div class="meta">
                        <a> <%= place.category%> </a>
                        <a> </a>
                    </div>
                    <div class="description">
                        <p><%= place.description.substring(0, 50) %> ...</p>
                    </div>
                </div>
                <div id="extra-placespage" class="extra content">
                    <div>
                        <i class="thumbtack icon"></i>
                        <%= place.city %>, <%= place.country %>
                    </div> 
                    <div>
                        <i class="child icon"></i>
                        <%= place.age %>
                    </div>
                    <div>
                        <span class="right floated">
                            <i class="plus icon"></i>
                            <a href="/paikat/<%= place._id %>">Lue lisää</a>
                        </span>
                    </div>
                </div>
                
        
            </div>
        <% }); %>
    </div>
</div>

<% include ./partials/footer %>